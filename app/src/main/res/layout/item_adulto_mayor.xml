<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarAdulto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"/>


        <TextView
            android:id="@+id/lastNameAdulto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/avatarAdulto"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/phoneAdulto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_below="@id/lastNameAdulto"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/avatarAdulto"
            android:paddingEnd="16dp"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceBody2"
            />

        <TextView
            android:id="@+id/streetAddressAdulto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_below="@id/phoneAdulto"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/avatarAdulto"
            android:paddingEnd="16dp"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceBody2"
            />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

